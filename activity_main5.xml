<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    선수명, 등번호, 생년월일, 포지션, 신장/체중, 경력, 입단계약금(만), 연봉(만), 지명순위, 입단년도
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/PlayerLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center" />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0f0"
            android:text="선수명"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0f0"
            android:gravity="center"
            android:text="등번호"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:textSize="25sp" />
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0f0"
            android:text="생년월일"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:textSize="25sp" />
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0f0"
            android:text="포지션"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0f0"
            android:text="신장/체중"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0f0"
            android:text="경력"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Text6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0f0"
            android:text="입단계약금(만)"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Text7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0f0"
            android:text="연봉(만)"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Text8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0f0"
            android:text="지명순위"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Text9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0f0"
            android:text="입단년도"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Text10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/PlusInform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="세부 정보를 알고 싶다면? (클릭)"
            android:textColor="#000"
            android:background="#0F0"
            android:textSize="20sp"/>


    </LinearLayout>
</ScrollView>
